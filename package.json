{
  "name": "spotlight",
  "version": "1.0.1",
  "description": "Spotlight - 智能随机点名助手",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "xlsx": "^0.18.5",
    "archiver": "^6.0.1",
    "extract-zip": "^2.0.1"
  },
  "build": {
    "appId": "com.spotlight.app",
    "productName": "Spotlight",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "files": [
      "main.js",
      "preload.js",
      "src/**/*",
      "data/**/*"
    ],
    "extraResources": [
      {
        "from": "data",
        "to": "data"
      }
    ]
  }
}
