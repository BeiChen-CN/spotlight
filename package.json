{
  "name": "spotlight",
  "version": "1.0.3",
  "description": "Spotlight - 智能随机点名助手",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "author": "BeiChen-CN <2678115663@qq.com>",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "xlsx": "^0.18.5",
    "archiver": "^6.0.1",
    "extract-zip": "^2.0.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/BeiChen-CN/spotlight.git"
  },
  "build": {
    "appId": "com.spotlight.app",
    "productName": "Spotlight",
    "copyright": "Copyright © 2026 Spotlight Team",
    "publish": [
      {
        "provider": "github",
        "owner": "BeiChen-CN",
        "repo": "spotlight"
      }
    ],
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "icon.png",
      "publisherName": "Spotlight Team"
    },
    "mac": {
      "target": "dmg",
      "icon": "icon.png"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "icon": "icon.png",
      "category": "Utility"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "allowElevation": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Spotlight",
      "license": "LICENSE",
      "language": 2052,
      "runAfterFinish": true,
      "deleteAppDataOnUninstall": false,
      "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "files": [
      "main.js",
      "preload.js",
      "src/**/*",
      "icon.png"
    ]
  }
}
